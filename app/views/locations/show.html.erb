<h3> location: <%= @location.zipcode %></h3>
<%=link_to "edit", edit_location_path, class: "btn btn-info"%>

<br>
<img src="https://maps.googleapis.com/maps/api/staticmap?center=<%=@location.zipcode%>&zoom=13&size=600x200&key=AIzaSyCOJ6MUrEJW9IqYy_UXTM2Np5dMTl4wwwE">

<table class="table">
  <thead>
    <tr>
      <th scope="col">INCHES</th>
      <th scope="col">REPORTED TIME</th>
    </tr>
  </thead>
  <tbody>

    <% @location.sorted_reports.each do |report| %>
      <tr>
        <th scope="row"><%= report.inches.round %></th>
        <td><%= time_ago_in_words(report.created_at) %> ago</td>
      </tr>
    <% end %>
  </tbody>
</table>